# AcAIA Backend Environment Variables
# Kopiraj ovaj fajl kao .env i popuni vrednosti

# API konfiguracija
API_HOST=0.0.0.0
API_PORT=8001

# File upload konfiguracija
MAX_FILE_SIZE=10485760  # 10MB u bajtovima
UPLOAD_DIR=uploads
ALLOWED_EXTENSIONS=pdf,docx,txt,jpg,jpeg,png

# AI/ML konfiguracija
# OpenAI Configuration (TODO: Add when implemented)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# RAG konfiguracija
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DIMENSION=384
SIMILARITY_THRESHOLD=0.7
MAX_RESULTS=10

# Cache konfiguracija
CACHE_ENABLED=true
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Logging konfiguracija
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS konfiguracija
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# OCR konfiguracija
OCR_LANGUAGE=srp+eng
OCR_CONFIDENCE_THRESHOLD=60

# Session konfiguracija
SESSION_TIMEOUT=3600
MAX_SESSIONS_PER_USER=10

# Performance konfiguracija
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30 